name: "::run_hybridift_notrace:0.1"
description: "Run HybriDIFT without traces"

filesets:
  files_dv:
    files:
      - ../our/dv/dpi/common_functions.cc
      - ../our/dv/dpi/elfloader.cc
      - ../our/dv/testbench.h : {is_include_file: true}
      - ../our/dv/ticks.h : {is_include_file: true}
      - ../our/dv/toplevel.cc
    file_type: cppSource

  files_rtl:
    files:
      - ../our/cpu_cfig.h: {is_include_file: true}
      - ../our/sysmap.h: {is_include_file: true}
      - ../our/ourparams.h : {is_include_file: true}
      - ../our/generated/out/hybridift.sv
      - ../our/src/util/our_axi_slave128.sv
      - ../our/src/util/our_sram_mem.sv
      - ../our/src/util/our_f_spsram_large.v
      - ../our/src/util/my_fpga_ram.v
      # - ../our/tmp/all_hybridift.v
      - ../our/src/openc910_tiny_soc_taints.sv
      - ../our/dv/sv/clk_rst_gen.sv
    file_type: systemVerilogSource


targets:
  default:
    default_tool: verilator
    filesets:
      - files_rtl
      - files_dv
    toplevel: openc910_tiny_soc
    tools:
      verilator:
        mode: cc
        verilator_options:
          - '-CFLAGS "-std=c++14 -Wall -g -O0"'
          - '-LDFLAGS "-pthread -lutil"'
          - '--build-jobs 64'
          - "--timing"
          - "-Wall"
          - "-Wno-fatal"
          - "-Wno-CMPCONST"
          - "-Wno-MULTIDRIVEN"
          - "-Wno-IMPLICIT"
          - "-Wno-PINCONNECTEMPTY"
          - "-Wno-BLKANDNBLK"
          - "-Wno-DECLFILENAME"
          - "-Wno-PINMISSING"
          - "-Wno-WIDTH"
          - "-Wno-SELRANGE"
          - "-Wno-WIDTHCONCAT"
          - "-Wno-VARHIDDEN"
          - "-Wno-LATCH"
          - "-Wno-SYMRSVDWORD"
          - "-Wno-CASEINCOMPLETE"
          - "-Wno-UNSIGNED"
          - "-Wno-UNDRIVEN"
          - "-Wno-UNUSEDPARAM"
          - "-Wno-UNUSEDSIGNAL"
          - "-Wno-ALWCOMBORDER"
          - "-Wno-IMPORTSTAR"
          - "-Wno-ENUMVALUE"
          - "-Wno-LITENDIAN"
          - "-Wno-UNOPTFLAT"
          - "-Wno-SYNCASYNCNET"
          - "-Wno-BLKSEQ"
          - "-Wno-LITENDIAN"
          - "-Wno-UNPACKED"
          - "-Wno-SELRANGE"
